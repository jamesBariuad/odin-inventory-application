extends layout 

block content 
    h1 #{productDetails.name}

    p #[strong Description:] #{productDetails.description}
    p #[strong Price:$] #{productDetails.price}
    p #[strong Stock:] #{productDetails.numberInStock}
    p #[strong Category:] 
        a(href=productDetails.category.url) #{productDetails.category.name}

    hr
    p 
        a(href=`/inventory/product/${productDetails._id}/delete`) Delete Product 
    p 
        a(href=`/inventory/product/${productDetails._id}/update`) Update Product 