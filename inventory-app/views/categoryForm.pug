extends layout 

block content 
    h1 Add a product category

    form(method="post") 
        div.form-group
            label.mb-1(for="name") Category: 
            input#category.form-control.mb-2(type='text', placeholder="Headphones, Graphic Cards, etc.", name='name', required, value=(undefined===category?"":category.name))
            
            label.mb-1(for="description") Description: 
            input#description.form-control(type='text', placeholder="Add a description", name="description", required, value=(undefined===category?"":category.description))
        button.btn.btn-primary.mt-3(type='submit') Submit

    
    if errors
        ul
        for error in errors
            li!= error.msg